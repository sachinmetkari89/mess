<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table border="1">
  <thead>
    <tr>
      <th>Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th colspan="2">Mobile No</th>
      
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.id %></td>
        <td><%= member.mem_first_name %></td>
        <td><%= member.mem_last_name %></td>
        <td><%= member.mem_mobile_no %></td>
        <td><%= member.mem_alt_mobile_no %></td>
        <td><%= member.email %></td>
        <td><%= member.mem_address %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

